package Group3.CourseApp.entity;

import jakarta.persistence.*;
import lombok.*;

import java.util.Set;

@Entity
@Table(name = "taxes")
@NoArgsConstructor
@AllArgsConstructor
@Getter
@Setter
@Builder
public class Tax {

    @Id
    @GeneratedValue(strategy = GenerationType.UUID)
    private String id;

    @Column(nullable = false)
    private String name;

    // Represented in percentage (e.g. 10 for 10%)
    @Column(nullable = false)
    private Integer rate;

    @ManyToMany(mappedBy = "taxes")
    private Set<Product> products;
}

